
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>

<div ng-controller="mvcCRUDCtrl" ng-app="mvcCRUDApp">
    <div class="divList">
        <p><b><i>Categories List</i></b></p>
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>Description</b></td>

            </tr>
            <tr ng-repeat="category in categories">
                <td>
                    {{category.Id}}
                </td>
                <td>
                    {{category.Description}}
                </td>
                <td>
                    <span ng-click="editCategory(category)" class="btn btn-primary">Edit</span>
                    <span ng-click="deleteCategory(category)" class="btn btn-danger">Delete</span>
                </td>
            </tr>
        </table>
    </div>
    <span ng-click="AddCategoryDiv()" class="btn btn-default">
        Add Category
    </span>
    <div ng-show="divCategory">
        <p class="divHead"></p>
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Category</i></b></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="categoryID" />
                </td>
                <td><b>Description</b></td>
                <td>
                    <input type="text" ng-model="categoryDescription" />
                </td>
            </tr>


            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <input type="button" class="btn btn-default" value="Save" ng-click="AddUpdateCategory()" />
                    <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />
                </td>
            </tr>

        </table>
    </div>
</div>